@using PuzzleMania.ViewModels
@model TeamStatsViewModel

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h1>Team Stats</h1>

<p>Team Name: @Model.TeamName</p>
<p>Current Number of Team Members: @Model.TeamSize</p>

<h3>Team Members:</h3>
<ul>
    @foreach (var member in Model.TeamMembers)
    {
            <li>@member</li>
    }
</ul>

<p>Total Points from Last Finished Game: @Model.TotalPoints</p>

<h3>QR Code:</h3>

@if(Model.TeamSize < 2)
{
    <img src="@Url.Action("QRCode", "Team", new { teamName = Model.TeamName })" alt="QR Code" />
    <a href="@Url.Action("QRCode", "Team", new { teamName = Model.TeamName })">Download QR Code</a>
}
else
{
    <p>QR Code generation is only available for incomplete teams.</p>
}



